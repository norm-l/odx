{
  "Service": {
    "Subpath": "/services/service-name/path",
    "Build_Command": "npm run build:prod:ci",
    "Lint_Command": "npm run lint:pipeline"
  },
  "Development": {
    "Environment": {
      "Type": "static-ec2",
      "Routing" : "external",
      "Suffix": "/dev/"
    },
    "Infrastructure": {
      "EC2_Type": "c5a.large",
      "EC2_Minimum_Hosts" : "1",
      "EC2_Maximum_Hosts" : "1"
    },
    "Build": {
      "SDK_Path": "sdk-configs/Development.json",
      "sdkContentServerUrl": "https://account-np.hmrc.gov.uk/services/service-name/path/dev/",
      "Version": "1.0.0"
    }
  },
  "Staging": {
    "Environment": {
      "Type": "static-ec2",
      "Routing" : "external",
      "Suffix": "/staging/"
    },
    "Infrastructure": {
      "EC2_Type": "c5a.large",
      "EC2_Minimum_Hosts" : "1",
      "EC2_Maximum_Hosts" : "1"
    },
    "Build": {
      "SDK_Path": "sdk-configs/Staging.json",
      "sdkContentServerUrl": "https://account.hmrc.gov.uk/services/service-name/path/staging/",
      "Version": "1.0.0"
    }
  },  
  "Preproduction": {
    "Environment": {
      "Type": "hpha-ec2",
      "Routing" : "external",
      "Suffix": "/preprod/"
    },
    "Infrastructure": {
      "EC2_Type": "c5a.large",
      "EC2_Minimum_Hosts" : "1",
      "EC2_Maximum_Hosts" : "1"
    },
    "Build": {
      "SDK_Path": "sdk-configs/Preproduction.json",
      "sdkContentServerUrl": "https://account.hmrc.gov.uk/services/service-name/path/preprod/",
      "Version": "1.0.0"
    }
  },
  "Production": {
    "Environment": {
      "Type": "hpha-ec2",
      "Routing" : "external",
      "Suffix": "/"
    },
    "Infrastructure": {
      "EC2_Type": "c5a.large",
      "EC2_Minimum_Hosts" : "1",
      "EC2_Maximum_Hosts" : "4"
    },
    "Build": {
      "SDK_Path": "sdk-configs/Production.json",
      "sdkContentServerUrl": "https://account.hmrc.gov.uk/services/service-name/path/",
      "Version": "1.0.0"
    }
  }
}