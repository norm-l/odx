{
  "compilerOptions": {
    "outDir": "./dist/",
    "experimentalDecorators": true,
    "strict": false,
    "sourceMap": true,
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "node_modules/i18next/index.d.ts"]
}
